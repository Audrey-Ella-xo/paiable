<% provide(:title, "Groups") %>
<p id="notice"><%= notice %></p>

<h1>Groups</h1>

<table>
  <thead>
    <tr>
      <th>Icon</th>
      <th>Name</th>
      <th>Date Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= image_tag group.icon.url if group.icon? %></td>
        <td><%= link_to "#{group.name}", group %></td>
        <td><%= group.created_at.to_date %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'Create new Group', new_group_path %>
<%= link_to 'Back', current_user %>

