<% provide(:title, @group.name) %>
<p id="notice"><%= notice %></p>
<div class="row">
  <aside class="col-md-4">
    <section class="group_info">
      <h1>
        <span><%= image_tag @group.icon.url if @group.icon? %></span>
        <%= @group.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <div>

    <table>
    <thead>
      <tr>
        <th>Project</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @group.projects.each do |project| %>
        <tr>
          <td><%= link_to project.name, project_path(project) %></td>
          <td><%= User.find_by(id: project.author_id).name%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'Back', groups_path %>
  <%= link_to 'Edit', edit_group_path(@group) %>
  <%= link_to 'Destroy', @group, method: :delete, data: { confirm: 'Are you sure?' } %>  
  <%= link_to 'Create new Group', new_group_path %>
  </div>
</div>
