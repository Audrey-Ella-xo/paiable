<% provide(:title, @project.name) %>
<p id="notice"><%= notice %></p>
<div class="row">
  <aside class="col-md-4">
    <section class="project_info">
      <h1>
        <span><%= image_tag @project.icon.url if @project.icon? %></span>
        <%= @project.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <div>

    <table>
    <thead>
      <tr>
        <th>Project</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @project.projects.each do |project| %>
        <tr>
          <td><%= link_to project.name, project_path(project) %></td>
          <td><%= User.find_by(id: project.author_id).name%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'Back', projects_path %>
  <%= link_to 'Edit', edit_project_path(@project) %>
  <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %>  
  <%= link_to 'Create new Project', new_project_path %>
  </div>
</div>
